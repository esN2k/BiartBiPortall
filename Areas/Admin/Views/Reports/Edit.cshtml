@model BiartBiPortal.Models.Report
@{
    ViewData["Title"] = "Rapor Düzenle";
    var categories = ViewBag.Categories as List<BiartBiPortal.Models.Category>;
    var selectedCategories = ViewBag.SelectedCategories as int[];
}
<div class="row mb-3">
    <div class="col"><h1 class="h3 fw-semibold">Rapor Düzenle</h1></div>
</div>
<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedDate" />
                    <input type="hidden" asp-for="CreatedByUserId" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Summary" class="form-label"></label>
                        <textarea asp-for="Summary" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Content" class="form-label"></label>
                        <textarea asp-for="Content" class="form-control" rows="8"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Kategoriler</label>
                        @if (categories != null && categories.Any())
                        {
                            <div class="border rounded p-3">
                                @foreach (var category in categories)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="selectedCategories" value="@category.Id" id="cat_@category.Id" @(selectedCategories != null && selectedCategories.Contains(category.Id) ? "checked" : "")>
                                        <label class="form-check-label" for="cat_@category.Id">@category.Name</label>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsPublished" class="form-check-input" />
                            <label asp-for="IsPublished" class="form-check-label"></label>
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle"></i> Güncelle</button>
                        <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-x-circle"></i> İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
