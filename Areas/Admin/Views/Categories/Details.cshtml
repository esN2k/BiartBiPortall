@model BiartBiPortal.Models.Category

@{
    ViewData["Title"] = "Kategori Detayları";
}

<div class="row mb-3">
    <div class="col">
        <h1 class="h3 fw-semibold">Kategori Detayları</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Kategoriler</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
            </ol>
        </nav>
    </div>
    <div class="col-auto">
        <div class="btn-group" role="group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Düzenle
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                <i class="bi bi-trash"></i> Sil
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <hr>
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            @Model.Description
                        }
                        else
                        {
                            <span class="text-muted">Açıklama girilmemiş</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CreatedDate)</dt>
                    <dd class="col-sm-9">@Model.CreatedDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</dd>
                    
                    <dt class="col-sm-3">Rapor Sayısı</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-primary">@Model.ReportCategories.Count rapor</span>
                    </dd>
                </dl>
            </div>
        </div>
        
        @if (Model.ReportCategories.Any())
        {
            <div class="card shadow-sm mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Bu Kategorideki Raporlar</h6>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var rc in Model.ReportCategories)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@rc.Report.Title</span>
                                <span class="text-muted small">@rc.Report.CreatedDate.ToLocalTime().ToString("dd.MM.yyyy")</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Listeye Dön
    </a>
</div>
