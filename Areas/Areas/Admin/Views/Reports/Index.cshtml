@model IEnumerable<BiartBiPortal.Models.Report>

@{
    ViewData["Title"] = "Raporlar";
}

<div class="row mb-3">
    <div class="col">
        <h1 class="h3 fw-semibold">Rapor Yönetimi</h1>
        <p class="text-muted">Raporları oluşturun, düzenleyin ve kategorilere atayın.</p>
    </div>
    <div class="col-auto">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Rapor
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <p class="text-muted mt-3">Henüz rapor eklenmedi.</p>
                <a asp-action="Create" class="btn btn-primary">İlk Raporu Ekle</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Kategoriler</th>
                            <th>Durum</th>
                            <th>Oluşturan</th>
                            <th>Tarih</th>
                            <th class="text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@item.Title</td>
                                <td>
                                    @if (item.ReportCategories.Any())
                                    {
                                        @foreach (var rc in item.ReportCategories)
                                        {
                                            <span class="badge bg-secondary me-1">@rc.Category.Name</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.IsPublished)
                                    {
                                        <span class="badge bg-success">Yayında</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Taslak</span>
                                    }
                                </td>
                                <td>@(item.CreatedByUser?.UserName ?? "-")</td>
                                <td>@item.CreatedDate.ToLocalTime().ToString("dd.MM.yyyy")</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Detaylar">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
