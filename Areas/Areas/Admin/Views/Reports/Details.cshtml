@model BiartBiPortal.Models.Report
@{
    ViewData["Title"] = "Rapor Detayları";
}
<div class="row mb-3">
    <div class="col"><h1 class="h3 fw-semibold">@Model.Title</h1></div>
    <div class="col-auto">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="bi bi-pencil"></i> Düzenle</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger"><i class="bi bi-trash"></i> Sil</a>
    </div>
</div>
<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Başlık</dt>
            <dd class="col-sm-9">@Model.Title</dd>
            <dt class="col-sm-3">Özet</dt>
            <dd class="col-sm-9">@(Model.Summary ?? "-")</dd>
            <dt class="col-sm-3">İçerik</dt>
            <dd class="col-sm-9">@Model.Content</dd>
            <dt class="col-sm-3">Kategoriler</dt>
            <dd class="col-sm-9">
                @if (Model.ReportCategories.Any())
                {
                    @foreach (var rc in Model.ReportCategories)
                    {
                        <span class="badge bg-secondary me-1">@rc.Category.Name</span>
                    }
                }
                else
                {
                    <span class="text-muted">Kategori atanmamış</span>
                }
            </dd>
            <dt class="col-sm-3">Durum</dt>
            <dd class="col-sm-9">
                @if (Model.IsPublished)
                {
                    <span class="badge bg-success">Yayında</span>
                }
                else
                {
                    <span class="badge bg-warning">Taslak</span>
                }
            </dd>
            <dt class="col-sm-3">Oluşturan</dt>
            <dd class="col-sm-9">@(Model.CreatedByUser?.UserName ?? "-")</dd>
            <dt class="col-sm-3">Oluşturulma Tarihi</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</dd>
            @if (Model.UpdatedDate.HasValue)
            {
                <dt class="col-sm-3">Güncellenme Tarihi</dt>
                <dd class="col-sm-9">@Model.UpdatedDate.Value.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</dd>
            }
        </dl>
    </div>
</div>
<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Listeye Dön</a>
</div>
