@model IEnumerable<BiartBiPortal.Models.Report>

@{
    ViewData["Title"] = "Raporlar";
    var categories = ViewBag.Categories as List<BiartBiPortal.Models.Category>;
    var selectedCategoryId = ViewBag.SelectedCategoryId as int?;
    var searchTerm = ViewBag.SearchTerm as string;
}

<div class="row mb-4">
    <div class="col">
        <h1 class="h3 fw-semibold">Raporlar</h1>
        <p class="text-muted">Yayınlanmış raporları görüntüleyin ve inceleyin.</p>
    </div>
    <div class="col-auto">
        <a asp-action="ExportToExcel" asp-route-categoryId="@selectedCategoryId" asp-route-search="@searchTerm" class="btn btn-success">
            <i class="bi bi-file-earmark-excel"></i> Excel Export
        </a>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-5">
                <label class="form-label">Kategoriye Göre Filtrele</label>
                <select name="categoryId" class="form-select" onchange="this.form.submit()">
                    <option value="">Tüm Kategoriler</option>
                    @if (categories != null)
                    {
                        @foreach (var category in categories)
                        {
                            var isSelected = selectedCategoryId == category.Id;
                            <option value="@category.Id" selected="@isSelected">
                                @category.Name
                            </option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-5">
                <label class="form-label">Arama</label>
                <input type="text" name="search" class="form-control" placeholder="Başlık veya özet..." value="@searchTerm">
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i> Ara
                </button>
            </div>
        </form>
        @if (selectedCategoryId.HasValue || !string.IsNullOrEmpty(searchTerm))
        {
            <div class="mt-3">
                <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Filtreyi Temizle
                </a>
            </div>
        }
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i>
        @if (selectedCategoryId.HasValue || !string.IsNullOrEmpty(searchTerm))
        {
            <span>Filtreye uygun rapor bulunamadı.</span>
        }
        else
        {
            <span>Henüz yayınlanmış rapor bulunmamaktadır.</span>
        }
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var report in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@report.Title</h5>
                        
                        @if (report.ReportCategories.Any())
                        {
                            <div class="mb-2">
                                @foreach (var rc in report.ReportCategories)
                                {
                                    <span class="badge bg-secondary me-1">@rc.Category.Name</span>
                                }
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(report.Summary))
                        {
                            <p class="card-text text-muted small">
                                @(report.Summary.Length > 150 ? report.Summary.Substring(0, 150) + "..." : report.Summary)
                            </p>
                        }
                        
                        <div class="small text-muted mb-3">
                            <i class="bi bi-calendar"></i> @report.PublishedDate?.ToLocalTime().ToString("dd.MM.yyyy")
                        </div>
                        
                        <a asp-action="Details" asp-route-id="@report.Id" class="btn btn-sm btn-primary">
                            <i class="bi bi-eye"></i> Detayları Gör
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
